<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity2">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/stat_sys_phone_call_forward"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp" android:layout_marginBottom="352dp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="19dp" android:id="@+id/phone_textview"
            android:layout_marginStart="20dp" app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintBaseline_toBaselineOf="@+id/button4" app:layout_constraintEnd_toStartOf="@+id/button4"
            android:layout_marginEnd="16dp"/>
    <Button
            android:text="@string/call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button4"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:backgroundTint="@color/colorAccent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:onClick="onClickCall"/>
</androidx.constraintlayout.widget.ConstraintLayout>
